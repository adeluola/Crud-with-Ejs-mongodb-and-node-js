<%-include("include/_header") %>
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/" class="border-shadow">
                    <i class="fas fa-angle-double-left"></i>
                    All Users
                </a>
            </div>
        </div>
        <div class="text-center form-title">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to update an account</span>
        </div>
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" value="<%= user._id %>" name="id">
                    <input type="text" value="<%= user.name %>" name="name" placeholder="Delu">
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" value="<%= user.email %>" name="email" placeholder="Example@email.com">
                </div>
        
                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="inline radio">
                <input type="radio" value="Active" name="status" id="radio-1" <% if(user.status == 'Active') {%> 
                    checked
                    <%}%>>                  
                <label for="radio-1" class="text-light">Active</label>
            </div>
            <div class="inline radio">
                <input type="radio" value="Inactive" name="status" id="radio-2"
                <% if(user.status == 'Inactive') {%> 
                    checked
                    <%}%> >
                <label for="radio-2" class="text-light">Inactive</label>
            </div>
                </div>
        
                <div class="form-group">
                    <label for="gender" class="text-light">Gender</label>
                    <div class=" radio inline ">
                <input type="radio" value="Male" name="gender" id="radio-3" 
                <% if(user.gender == 'Male') {%> 
                    checked
                    <%}%> >
                <label for="radio-3" class="text-light">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" value="Female" name="gender" id="radio-4" 
                <% if(user.gender == 'Female') {%> 
                    checked
                    <%}%> >
                <label for="radio-4" class="text-light">Female</label>
            </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        
        
        </form>
    </div>
</main>

<%-include("include/_footer") %>